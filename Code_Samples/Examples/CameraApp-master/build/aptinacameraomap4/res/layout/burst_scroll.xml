<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical"
		android:gravity="center_horizontal|center_horizontal"

		android:layout_width="match_parent"
		android:layout_height="match_parent" >
		
		<LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="10dip"
		    android:layout_marginBottom="10dip"
		    android:gravity="center_vertical|center_horizontal"
		    android:orientation="horizontal" >

		    <ImageView android:id="@+id/minus_button"
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:padding="20dip"
		    	android:clickable="true"
		    	android:src="@drawable/minus_button_norm" />

		    <TextView android:id="@+id/bursts_to_capture_text"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dip"
		        android:layout_marginRight="10dip"
		        android:enabled="false"
		        android:gravity="center_vertical|center_horizontal"
		        android:paddingLeft="15dip"
		        android:paddingRight="15dip"
		        android:text="1"
		        android:textColor="@color/focus_menu_focus_title_text_color"
		        android:textColorHint="@color/focus_menu_focus_title_text_color"
		        android:textSize="@dimen/burst_number_text_size" >

		    </TextView>
		     <ImageView android:id="@+id/plus_button"
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:padding="20dip"
		    	android:clickable="true"
		    	android:src="@drawable/plus_button_norm" />
		</LinearLayout>

		<com.aptina.camera.components.ExpandingHorizontalScrollView
			android:id="@+id/burst_scroller"
			android:layout_width="@dimen/burst_scroll_init_width"  
			android:layout_height="@dimen/burst_scroll_init_height"  
			android:background="@drawable/mode_black"
			android:fadeScrollbars="false"
			android:padding="0dip"
			android:paddingRight="5dip"
			android:scrollbarStyle="outsideOverlay"
			android:scrollbars="horizontal"
			android:layout_marginBottom="5dip"
			>

			<LinearLayout
				android:id="@+id/burst_image_container"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_gravity="center_vertical"
				android:gravity="center_vertical|center_horizontal"
				android:orientation="horizontal"
				android:padding="0dip" >
			</LinearLayout>
		</com.aptina.camera.components.ExpandingHorizontalScrollView>



</LinearLayout>
